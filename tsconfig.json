
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonJS",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021", "DOM"]
  },
  "include": [
    "src/**/*"
  ]
}